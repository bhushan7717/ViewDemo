@model IEnumerable<ViewDemo.Models.Employee>

@{
    ViewBag.Title = "Employee Details";
}

    <h2>Employee Details</h2>

<button onclick="location.href='@Url.Action("Create", "Home")'" class="btn btn-default">Create <span class="glyphicon glyphicon-plus" aria-hidden="true"></span></button>
<br />
<br/>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Employee ID</th>
            <th>Employee Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td> @item.EmpId</td>
            <td> @item.EmpName</td>
            @*<td> @Html.ActionLink("Edit", "Edit",new { id = item.EmpId } ) <span class="glyphicon glyphicon-pencil"></span> </td>*@
            <td class="text-center">
                <a href="@Url.Action("Edit/"+ item.EmpId, "Home")" class="">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>

                <a href="@Url.Action("Delete/"+ item.EmpId, "Home")" class="">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>

